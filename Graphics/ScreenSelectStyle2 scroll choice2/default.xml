<ActorFrame
	MadeChoiceP1MessageCommand="playcommand,GoOff"
	MadeChoiceP2MessageCommand="playcommand,GoOff"
	GoOffCommand="%function(self) self:linear(0.5); local bHasFocus=math.abs(self:GetZoomZ()-1.1)<0.01; if bHasFocus then self:x(0); self:y(0); self:z(200); self:diffuse(1,1,1,1); self:zoom(1); self:glowblink(); self:sleep(0.5); self:linear(0.5); self:zoom(0); else self:x(0); self:y(0); self:z(0); self:zoom(0); end self:sleep(5) end"
> <children>
	<Layer
		Font="_momcake 48px"
		Text="Two Players"
		InitCommand="y,0;zoom,1.4;horizalign,center;shadowlength,2;diffusealpha,0;sleep,0.2;accelerate,0.6;diffusealpha,1"
		OnCommand="%function(self) self:shadowlength(4); end"
		GainFocusCommand="diffuse,#4695D0;zoom,1.8;rotationz,-2;decelerate,0.25;zoom,1.6;rotationz,0;bounce;effectperiod,0.413793;effectmagnitude,0,0,50"
		LoseFocusCommand="stoptweening;stopeffect;zoom,1.4;diffuse,#898989"
		DisabledCommand="diffuse,0.5,0.5,0.5,1"
	/>
	<Layer
		File="../glow"
		InitCommand="y,0;zoomy,0.25;diffusealpha,0;zoomto,SCREEN_WIDTH,SCREEN_HEIGHT;"
		GainFocusCommand="diffusealpha,1;decelerate,0.5;diffusealpha,0"
		LoseFocusCommand="stoptweening;stopeffect;diffusealpha,0"
	/>
</children> </ActorFrame>
